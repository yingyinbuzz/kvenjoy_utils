RootWidget:
    orientation: 'vertical'
    GridLayout:
        cols: 2
        size_hint_y: None
        Label:
            text: 'Threshold ({:.0f})'.format(threshold.value)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            size_hint_x: None
        Slider:
            id: threshold
            min: 0
            max: 255
            value: root.threshold
            on_value: root.threshold = args[1]
        Label:
            text: 'Stroke threshold ({:.0f})'.format(stroke_threshold.value)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            size_hint_x: None
        Slider:
            id: stroke_threshold
            min: 0
            max: 255
            value: root.stroke_threshold
            on_value: root.stroke_threshold = args[1]
        Label:
            text: 'Glyph threshold ({:.0f})'.format(glyph_threshold.value)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            size_hint_x: None
        Slider:
            id: glyph_threshold
            min: 0
            max: 255
            value: root.glyph_threshold
            on_value: root.glyph_threshold = args[1]
    ScrollView:
        Image:
            id: img
            size: self.texture_size
            size_hint_x: None
            size_hint_y: None
            on_touch_down: root.on_image_clicked(*args)

<LoadDialog>:
    BoxLayout:
        orientation: 'vertical'
        FileChooserIconView:
            id: file_chooser
            on_submit: root.confirm(file_chooser.path, file_chooser.selection)
        BoxLayout:
            height: 30
            size_hint_y: None
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.confirm(file_chooser.path, file_chooser.selection)
