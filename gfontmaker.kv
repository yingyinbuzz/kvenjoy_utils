RootWidget:
    orientation: 'vertical'
    GridLayout:
        cols:2
        size_hint_y: None
        Label:
            text: 'Threshold {:.0f}'.format(threshold.value)
            size_hint_x: None
        Slider:
            id: threshold
            min: 0
            max: 255
            value: root.threshold
            on_value: root.threshold = args[1]
    ScrollView:
        Image:
            source: 'English_Letters.jpg'
            size: self.texture_size
            size_hint_x: None
            size_hint_y: None
            on_touch_down: root.on_image_clicked(*args)
